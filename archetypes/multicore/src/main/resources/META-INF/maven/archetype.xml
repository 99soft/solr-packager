<archetype xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0 http://maven.apache.org/xsd/archetype-1.0.0.xsd">

    <id>solr-multicore-standalone</id>

    <allowPartial>true</allowPartial>

    <resources>
        <resource filtered="true">pom.xml</resource>

        <!--
         | filters
        -->
        <resource>src/main/filters/dev.properties</resource>
        <resource>src/main/filters/prod.properties</resource>
        <resource>src/main/filters/staging.properties</resource>
        <resource>src/main/filters/testing.properties</resource>

        <!--
         | Solr common resources
        -->
        <resource>src/main/solr/solr.xml</resource>
    </resources>

</archetype>
